<div class="article_index">
  <% if current_user.news_post_auth %>
    <p class="new_article"><%= link_to "新規追加", new_article_path, class: "btn" %></p>
  <% end %>

  <table class="article_table">
    <thead>
      <tr>
        <th class="title">タイトル</th>
        <th><%=sort_order "created_at","公開日" %></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr class="article">
          <td class="title"><%= link_to article.title, article_path(article) %></td>
          <td><%= l article.created_at, format: :short %></td>
          <% if current_user.news_post_auth || article.employee == current_user %>
            <td class="btn_th"><%= link_to "編集", edit_article_path(article), class: 'btn' %></td>
            <td class="btn_th"><%= link_to "削除", article_path(article), method: :delete, data: { confirm: '投稿を削除しますか？' }, class: 'btn'%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pagination mt-3">
    <%= paginate @articles, theme: 'bootstrap-5' %>
  </div>
</div>